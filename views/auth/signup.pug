extends ../layout/main-layout.pug
block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="stylesheet" href="/css/auth.css")
block content
    main
        if errorMessage
            div.user-message.user-message--error #{errorMessage}
        form.login-form(method="POST",action= "/signUp",novalidate)
            .form-control
                label(for="email") E-Mail
                input(type="email" id="email" name="email" value=oldInput.email class=validationErrors.find(e => e.param === 'email') ? 'invalid' : '')
            .form-control
                label(for="password") Password
                input(type="password" id="password" name="password" value=oldInput.password class=validationErrors.find(e => e.param === 'password') ? 'invalid' : '')
            .form-control
                label(for="confirmPassword") Confirm Password
                input(type="password" id="confirmPassword" name="confirmPassword" value=oldInput.confirmPassword class=validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '')
            input(type="hidden", name="_csrf" value=csrfToken)
            button.btn(type="submit") SignUp     